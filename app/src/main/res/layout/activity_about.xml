<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.cjwddz.knowu.activity.AboutActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/background_about"
        android:scaleType="fitXY"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="25px"
            android:text="@string/appVersion"
            android:textColor="@color/tv_about_color"
            android:textSize="@dimen/tv_about_size" />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"></View>
        <TextView
            android:id="@+id/tv_appVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="25px"
            android:layout_gravity="center"
            android:textColor="@color/tv_about_color"
            android:textSize="@dimen/tv_about_size" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:layout_marginLeft="25px"
        android:layout_marginRight="25px"
        android:background="@color/divider_color"
        ></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="horizontal"
        android:onClick="checkUpdate"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="25px"
            android:text="@string/checkNewVersion"
            android:textColor="@color/tv_about_color"
            android:textSize="@dimen/tv_about_size" />
        <ImageView
            android:id="@+id/iv_hadNewVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20px"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:layout_marginLeft="25px"
        android:layout_marginRight="25px"
        android:background="@color/divider_color"
        ></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="horizontal"
        android:onClick="giveIdeas"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="25px"
            android:text="@string/giveSomeIdeas"
            android:textColor="@color/tv_about_color"
            android:textSize="@dimen/tv_about_size" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/divider_color"
        ></View>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="49"></View>

</LinearLayout>


